{
	"manifest_version": 2,
	"version": "0.4",
	"name": "다음카페 사용자 메모",
	"description": "IZ*ONE 공식 팬카페 어그로 판별을 위한 사용자 메모 기능 추가",

	"content_scripts": [
		{
			"matches": ["*://cafe.daum.net/*"],
			"js": ["usermemo.js"],
			"all_frames": true,
			"run_at": "document_idle"
		}
	],

	"options_page": "options.html",

	"permissions": [
		"storage",
		"notifications"
	]
}
